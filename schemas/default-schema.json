{
    "$id": "https://raw.githubusercontent.com/inofix/ardu-report/master/json/default-schema.json",
    "title": "Default Sensor Data Schema",
    "description": "Definition of the inofix.ch arduino sensor data output JSON. (Customizations must only respect the use flag and may vary the property names. Please validate against this schema.)",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "use": "identifier"
        },
        "value": {
            "type": "number",
            "use": "value"
        },
        "unit": {
            "type": "string",
            "use": "unit"
        },
        "threshold": {
            "type": "number",
            "use": "threshold"
        }
    },
    "required": ["id", "value"]
}
